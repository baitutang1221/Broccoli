<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#847465"></FrameLayout>

    <ImageView
        android:id="@+id/iv_head_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/icon_layout_pic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_head_photo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:text="2018安卓深圳开发者大会"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4B4B4B"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_view_time"
                        android:layout_width="100dp"
                        android:text="浏览 9721次"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_collect_time"
                        android:layout_width="100dp"
                        android:text="收藏 337次"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="100dp"
                    android:text="¥ 149"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center|left"
                    android:textColor="#08AE50"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/iv_clock"
                        android:src="@mipmap/icon_clock"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12/15 09:00 - 17:00"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="60dp"
                        android:layout_toLeftOf="@+id/iv_calendar"
                        android:layout_toRightOf="@id/iv_clock"
                        android:textColor="#616161" />

                    <ImageView
                        android:id="@+id/iv_calendar"
                        android:src="@mipmap/icon_calendar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/iv_location"
                        android:src="@mipmap/icon_location"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:text="广东省深圳南山区"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@+id/iv_arrow_right"
                        android:layout_toRightOf="@id/iv_location"
                        android:textColor="#616161" />

                    <ImageView
                        android:id="@+id/iv_arrow_right"
                        android:src="@mipmap/icon_arrow_right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_logo"
                        android:src="@mipmap/icon_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_organizer_name"
                            android:text="深圳安卓部落"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="100dp"
                            android:gravity="center|left"
                            android:textColor="#4B4B4B"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginTop="3dp"
                            android:text="深圳安卓部落是一个非营利性组织, 于2016成立，总部位于广东省深圳市南山区"
                            android:id="@+id/tv_organizer_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:singleLine="true"
                            android:textColor="#888888"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_fans"
                                android:text="粉丝"
                                android:drawableLeft="@mipmap/icon_fans"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:drawablePadding="2dp"
                                android:gravity="center_vertical"
                                android:textColor="#666666"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_fans_number"
                                android:layout_width="45dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="888"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="#616161" />

                            <TextView
                                android:id="@+id/tv_events"
                                android:text="活动"
                                android:drawableLeft="@mipmap/icon_events"
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:drawablePadding="2dp"
                                android:gravity="center_vertical"
                                android:textColor="#666666"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_events_number"
                                android:layout_width="45dp"
                                android:text="88"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="#616161" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_follow"
                        android:background="@drawable/button_shape"
                        android:textColor="#08B54D"
                        android:textSize="18sp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="关注"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="35dp" />

                    <TextView
                        android:id="@+id/tv_station"
                        android:background="@drawable/button_shape"
                        android:text="主办方小站"
                        android:textColor="#08B54D"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="35dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    <ImageView
        android:id="@+id/iv_retry"
        android:onClick="onRetry"

        android:src="@mipmap/icon_retry"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
</RelativeLayout>